{
  "uid": "bookstore-api-overview",
  "title": "Bookstore API Overview",
  "schemaVersion": 39,
  "version": 2,
  "refresh": "10s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Sales Amount Total",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "refId": "A", "expr": "bookstore_sales_amount_total" }],
      "fieldConfig": { "defaults": { "unit": "currencyUSD" }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "auto" }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Purchases Amount Total",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "refId": "A", "expr": "bookstore_purchases_amount_total" }],
      "fieldConfig": { "defaults": { "unit": "currencyUSD" }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "auto" }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Request Rate",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "refId": "A", "expr": "sum(rate(bookstore_http_requests_total[1m]))", "legendFormat": "requests/sec" }],
      "options": { "legend": { "showLegend": true, "placement": "bottom" }, "tooltip": { "mode": "single" } },
      "fieldConfig": { "defaults": { "unit": "reqps" }, "overrides": [] }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Latency p50 / p95",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.50, sum(rate(bookstore_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.95, sum(rate(bookstore_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "placement": "bottom" }, "tooltip": { "mode": "single" } }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Traffic by Path/Status",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 9 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(bookstore_http_requests_total[5m])) by (path, status)",
          "legendFormat": "{{path}} {{status}}"
        }
      ],
      "options": { "legend": { "showLegend": true, "placement": "right" }, "tooltip": { "mode": "single" } },
      "fieldConfig": { "defaults": {}, "overrides": [] }
    }
  ],
  "templating": { "list": [] },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
